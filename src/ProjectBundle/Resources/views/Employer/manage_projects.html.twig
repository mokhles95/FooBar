{% extends "Dashboard/Employer/dashboard_layout.html.twig" %}

{% block content %}
<!-- Employer Content-->

        <!-- Employer Headline -->
        <div class="dashboard-headline">
            <h3>Manage Projects</h3>

            <!-- Breadcrumbs -->
            <nav id="breadcrumbs" class="dark">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Dashboard</a></li>
                    <li>Manage Projects</li>
                </ul>
            </nav>
        </div>

        <!-- Row -->
        <div class="row">

            <!-- Employer Box -->
            <div class="col-xl-12">
                <div cclass="tasks-list-container margin-top-35">

                    <!-- Headline -->
                    {% for mp in manage_projects %}
                    <div class="task-listing">
                        <ul class="dashboard-box-list">
                            <li>

                                <!-- Job Listing -->
                                <div>

                                    <!-- Job Listing Details -->
                                    <div>

                                        <!-- Details -->
                                        <div class="job-listing-description">
                                            <h3 class="task-listing-title"><a href="{{ path('manage_project', {'id': mp.id}) }}">{{ mp.projectName }}</a> <span class="dashboard-status-button yellow">Expiring</span></h3>

                                            <!-- Job Listing Footer -->
                                            <div class="job-listing-footer">
                                                <ul>
                                                    <li><i class="icon-material-outline-access-time"></i> 23 hours left</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <di>/home/olfa/lampstack-7.1.24-0/apache2/htdocs/FooBar</di>
                                <!-- Projects Details -->
                                <ul class="dashboard-task-info">
                                    <li><strong>3</strong><span>Bids</span></li>
                                    <li><strong>$22</strong><span>Avg. Bid</span></li>
                                    <li><strong>$15 - $30</strong><span>Hourly Rate</span></li>
                                </ul>

                                <!-- Buttons -->
                                <div class="buttons-to-right always-visible">
                                    <a href="{{ path('bidders',{'id':'1'}) }}" class="button ripple-effect"><i class="icon-material-outline-supervisor-account"></i> Manage Bidders <span class="button-info">3</span></a>
                                    <a href="{{ path('update_manage_projects', {'id': mp.id}) }}" class="button ripple-effect" title="Edit Project" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
                                    <a href="{{ path('delete_manage_projects', {'id': mp.id}) }}" class="button ripple-effect"  data-tippy-placement="top" title="Remove Project"><i class="icon-feather-trash-2"></i></a>
                                </div>

                            </li>
                        </ul>
                    </div>
                    {% endfor %}
                </div>
            </div>

        </div>
        <!-- Row / End -->

    <!-- Pagination -->
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <!-- Pagination -->
            <div class="pagination-container margin-top-60 margin-bottom-60">
                {{ knp_pagination_render(manage_projects) }}
            </div>
        </div>
    </div>
    <!-- Pagination / End -->


{% endblock %}